<h1 id = 'switch'>burgers'time!</h1>

<div class = "float">
<h2>burgers that are not devoured!</h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
      <div class = 'rocket'>
        {{this.name}}
      </div>  

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour me!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class = "float">
<h2 >burgers that are devoured!</h2>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
       <div class = 'rocket'>
        {{this.name}}
      </div>  

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit" >TRY ME AGAIN!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div class = "stick">
<h2>Add a burger</h2>
<form class="create-update-form" action="/" method="POST">
  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>
</div>
